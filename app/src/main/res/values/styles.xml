<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:listDivider">@color/text_color</item>

    </style>
    <style name="RecyclerTheme" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:listDivider">@color/text_color_black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.RatingBar">
        <item name="colorControlNormal">@color/text_color</item>
        <item name="colorControlActivated">@color/pics_color</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>
