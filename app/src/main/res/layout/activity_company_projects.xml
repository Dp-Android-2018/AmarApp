<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="ProjectsViewModel"
            type="dp.com.amarapp.viewmodel.CompanyProjectsViewModel"/>
    </data>
<RelativeLayout
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"/>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@id/toolbar"
        android:numColumns="2"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="34dp"
        android:layout_margin="11dp"
        bind:projectsinfo="@{ProjectsViewModel.projectList}"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp293w"
        android:layout_height="@dimen/dp241h"
        android:layout_centerInParent="true"
        android:src="@mipmap/no_data"
        android:visibility="@{ProjectsViewModel.textVisibality}"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="لا يوجد مشاريع للشركة حتى الأن"
        android:visibility="@{ProjectsViewModel.textVisibality}"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color_black"
        android:textStyle="bold"
        android:textSize="@dimen/sp10"/>
        <!--tools:listitem="@layout/project_grid_item"-->
</RelativeLayout>
</layout>