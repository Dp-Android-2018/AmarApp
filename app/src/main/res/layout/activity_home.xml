<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="HomeViewModel"
            type="dp.com.amarapp.viewmodel.HomeViewModel"/>
    </data>

<LinearLayout
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".77"
        android:background="@mipmap/bg">
        <LinearLayout
            android:layout_width="@dimen/dp120h"
            android:layout_height="@dimen/dp82w"
            android:background="@drawable/shape_squer_home"
            android:orientation="vertical"
            android:id="@+id/city"
            android:onClick="@{HomeViewModel::getCities}"
            android:layout_marginTop="@dimen/dp15h"
            android:layout_marginStart="@dimen/dp15h">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city"

                android:textColor="@color/home_text_color"
                android:lineSpacingExtra="-11.3sp"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:textSize="@dimen/sp15_5"
                android:layout_marginTop="@dimen/dp12h"
                android:layout_marginEnd="@dimen/dp12h"/>
            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/back_ground_gray"
                android:lineSpacingExtra="-4.8sp"
                android:text="@{HomeViewModel.cityName}"
                android:layout_gravity="end"
                android:textSize="@dimen/sp10"
               android:layout_marginTop="@dimen/dp8w"
                android:layout_marginEnd="@dimen/dp12h"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@mipmap/flag"
                android:layout_marginEnd="@dimen/dp12h"
                android:layout_marginTop="@dimen/dp7h"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="@dimen/dp120h"
            android:layout_height="@dimen/dp82w"
            android:layout_marginTop="@dimen/dp15h"
            android:layout_marginEnd="@dimen/dp15h"
            android:background="@drawable/shape_squer_home"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:id="@+id/country"

            android:onClick="@{HomeViewModel::getCountries}">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/country"
                android:textStyle="bold"
                android:textColor="@color/home_text_color"
                android:lineSpacingExtra="-11.3sp"
                android:layout_gravity="end"
                android:textSize="@dimen/sp15_5"
                android:layout_marginTop="@dimen/dp12h"
                android:layout_marginEnd="@dimen/dp12h"

                />
            <TextView
                android:id="@+id/tv_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/back_ground_gray"
                android:lineSpacingExtra="-4.8sp"
                android:text="@{HomeViewModel.countryName}"
                android:layout_gravity="end"
                android:textSize="@dimen/sp10"
                android:layout_marginTop="@dimen/dp8w"
                android:layout_marginEnd="@dimen/dp12h"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@mipmap/flag"
                android:layout_marginEnd="@dimen/dp12h"
                android:layout_marginTop="@dimen/dp7h"/>

        </LinearLayout>
        <LinearLayout

            android:layout_width="@dimen/dp120h"
            android:layout_height="@dimen/dp82w"
            android:layout_marginTop="@dimen/dp21w"
            android:layout_marginStart="@dimen/dp15h"

            xmlns:android="http://schemas.android.com/apk/res/android"

            android:background="@drawable/shape_squer_home"
            android:orientation="vertical"
            android:layout_below="@id/city"
            android:id="@+id/spicalization"
            android:onClick="@{HomeViewModel::getSpecialization}">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spicalization"
                android:textColor="@color/home_text_color"
                android:lineSpacingExtra="-11.3sp"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:textSize="@dimen/sp15_5"
                android:layout_marginTop="@dimen/dp12h"
                android:layout_marginEnd="@dimen/dp12h"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/back_ground_gray"
                android:lineSpacingExtra="-4.8sp"
                android:text="@{HomeViewModel.specializationName}"
                android:layout_gravity="end"
                android:textSize="@dimen/sp10"
                android:layout_marginTop="@dimen/dp8w"
                android:layout_marginEnd="@dimen/dp12h"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@mipmap/grs"
                android:layout_marginEnd="@dimen/dp12h"
                android:layout_marginTop="@dimen/dp7h"/>

        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="@dimen/dp120h"
            android:layout_height="@dimen/dp82w"
            android:layout_marginTop="@dimen/dp21w"
            android:layout_marginStart="@dimen/dp15h"
            android:background="@drawable/shape_squer_home"
            android:orientation="vertical"
            android:layout_below="@id/country"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="15dp"
            android:onClick="@{HomeViewModel::getCategories}">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:textColor="@color/home_text_color"
                android:lineSpacingExtra="-11.3sp"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:textSize="@dimen/sp15_5"
                android:layout_marginTop="@dimen/dp12h"
                android:layout_marginEnd="@dimen/dp12h"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/back_ground_gray"
                android:lineSpacingExtra="-4.8sp"
                android:text="@{HomeViewModel.categoryName}"
                android:layout_gravity="end"
                android:textSize="@dimen/sp10"
                android:layout_marginTop="@dimen/dp8w"
                android:layout_marginEnd="@dimen/dp12h"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@mipmap/type"


                android:layout_marginEnd="@dimen/dp12h"
                android:layout_marginTop="@dimen/dp7h"/>

        </LinearLayout>
        <Button
            android:layout_width="@dimen/dp180h"
            android:layout_height="@dimen/dp36h"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/text_color_green"
            android:layout_centerHorizontal="true"
            android:textSize="19.3sp"
            android:textColor="@color/text_color"
            android:lineSpacingExtra="-12.8sp"
            android:text="@string/search_1"
            android:layout_below="@id/spicalization"
            android:id="@+id/search"
            android:layout_marginTop="20dp"
            android:onClick="@{HomeViewModel::search}"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".03"
        android:layout_marginTop="@dimen/dp10w"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img"
            android:layout_alignParentEnd="true"
            android:id="@+id/img"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp7h"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/img"
            android:layout_marginEnd="@dimen/dp4h"
            android:textSize="@dimen/sp11"
            android:layout_centerVertical="true"
            android:textColor="@color/home_text_color"
            android:lineSpacingExtra="-6sp"
            android:gravity="end"
            android:text="@string/new_company"/>
    </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_adverts"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp19h"
            android:layout_height="0dp"
            android:layout_weight=".2"
            tools:listitem="@layout/advert_list_item"
            bind:advertinfo="@{HomeViewModel.homeAdverts}"/>
</LinearLayout>
</layout>