<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="ProfileViewModel1"
            type="dp.com.amarapp.viewmodel.CompanyProfileViewModel_1"/>
    </data>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_parent">
    <EditText
        android:layout_width="@dimen/dp225h"
        android:layout_height="@dimen/dp27w"
        android:background="@drawable/edit_text_shape"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp40w"
        android:hint="@string/company_name"
        android:text="@={ProfileViewModel1.name}"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp14h"
        android:textSize="@dimen/sp10"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="@dimen/dp225h"
        android:layout_height="@dimen/dp27w"
        android:background="@drawable/edit_text_shape"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp14h"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        android:paddingEnd="@dimen/dp14h"
        android:paddingStart="@dimen/dp14h"
        android:gravity="center_vertical|end"
        android:text="@{ProfileViewModel1.mail}"
        android:textSize="@dimen/sp10"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="@dimen/dp225h"
        android:layout_height="@dimen/dp27w"
        android:background="@drawable/edit_text_shape"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp14h"
        android:textSize="@dimen/sp10"
        android:textColorHint="@color/text_color"
        android:inputType="textPassword"
        android:paddingEnd="@dimen/dp14h"
        android:paddingStart="@dimen/dp14h"
        android:gravity="center_vertical|end"
        android:hint="@string/password"
        android:textDirection="locale"
        android:textColor="@color/text_color"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="@dimen/dp225h"
        android:layout_height="@dimen/dp27w"
        android:background="@drawable/edit_text_shape"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp14h"
        android:hint="@string/pass_confirmation"
        android:textColorHint="@color/text_color"
        android:paddingEnd="@dimen/dp14h"
        android:paddingStart="@dimen/dp14h"
        android:gravity="center_vertical|end"
        android:inputType="textPassword"
        android:textDirection="locale"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp10"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="@dimen/dp225h"
        android:layout_height="@dimen/dp27w"
        android:background="@drawable/edit_text_shape"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp14h"
        android:hint="@string/country"
        android:textColor="@color/text_color"
        android:onClick="@{ProfileViewModel1::getCountries}"
        android:textColorHint="@color/text_color"
        android:paddingEnd="@dimen/dp14h"
        android:gravity="center_vertical"
        android:text="@{ProfileViewModel1.countryName}"
        android:textSize="@dimen/sp10"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="@dimen/dp225h"
        android:layout_height="@dimen/dp27w"
        android:background="@drawable/edit_text_shape"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp14h"
        android:hint="@string/city"
        android:textColorHint="@color/text_color"
        android:onClick="@{ProfileViewModel1::getCities}"
        android:paddingEnd="@dimen/dp14h"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:text="@{ProfileViewModel1.cityName}"
        android:textSize="@dimen/sp10"
        android:textStyle="bold"/>
    <Button
        android:layout_width="@dimen/dp150h"
        android:layout_height="@dimen/dp36h"
        android:layout_gravity="center"
        android:background="@drawable/button_shape"
        android:layout_marginTop="@dimen/dp74h"
        android:textSize="@dimen/sp15"
        android:textColor="@color/text_color"
        android:text="@string/save"
        android:textStyle="bold"
        android:onClick="@{ProfileViewModel1::save}"/>
</LinearLayout>
</layout>