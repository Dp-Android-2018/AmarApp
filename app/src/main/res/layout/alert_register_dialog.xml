<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/dp216w"
        android:layout_height="@dimen/dp131h"
        android:background="@color/text_color"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp30h"
            android:text="@string/please_register"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/sp12"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_centerHorizontal="true"
            android:text="@string/can_follow"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/sp12"
            android:textStyle="bold"
            android:id="@+id/text2"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp37h"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="@dimen/dp108w"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="@color/action_bar_background"
                android:text="@string/cancel"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/dp2w"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/bt_cancel"
                android:background="@color/vertical_line_dialog" />

            <Button
                android:id="@+id/bt_register"
                android:layout_width="@dimen/dp108w"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/view"
                android:background="@color/action_bar_background"
                android:text="@string/register"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>