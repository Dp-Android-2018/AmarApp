<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="ItemCompanyViewModel"
            type="dp.com.amarapp.viewmodel.ItemCompanyViewModel"/>
    </data>

    <RelativeLayout
        android:id="@+id/rl_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp86h"
        android:layout_marginTop="@dimen/dp14h"
        android:layout_marginStart="@dimen/dp5w"
        android:layout_marginEnd="@dimen/dp5w"
        android:background="@color/advert_background"
        android:onClick="@{ItemCompanyViewModel::companyDetail}">

                <ImageView
                    android:layout_width="@dimen/dp70h"
                    android:layout_height="@dimen/dp68h"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="@dimen/dp8w"
                    android:layout_marginStart="@dimen/dp4h"
                    android:layout_marginTop="@dimen/dp8w"
                    android:layout_marginBottom="@dimen/dp8w"
                    android:src="@mipmap/logo"
                    android:id="@+id/company_img"
                   />
                <View
                    android:layout_width="@dimen/dp1h"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@id/company_img"
                    android:background="@color/back_ground_gray"
                    android:layout_marginStart="@dimen/dp4h"
                    android:layout_marginEnd="@dimen/dp4h"
                    android:layout_marginTop="@dimen/dp8w"
                    android:layout_marginBottom="@dimen/dp8w"
                    android:id="@+id/line"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/line"
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/text_color_gray"
                    android:lineSpacingExtra="-7.5sp"
                    android:id="@+id/company_title"
                    android:layout_marginTop="@dimen/dp11w"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/dp4h"
                    android:text="@{ItemCompanyViewModel.title}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp4h"
                    android:textSize="@dimen/sp11"
                    android:layout_marginTop="@dimen/dp5h"
                    android:textColor="@color/text_color_city"
                    android:textStyle="bold"
                    android:text="@string/type"
                    android:layout_toStartOf="@id/line"
                    android:layout_below="@id/company_title"
                    android:id="@+id/type"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/type"
                    android:textSize="@dimen/sp8"
                    android:layout_marginTop="@dimen/dp5h"
                    android:layout_below="@id/company_title"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@{ItemCompanyViewModel.type}"
                   android:layout_marginEnd="@dimen/dp5h"
                    android:id="@+id/company_type"
                    />

            <TextView
                android:id="@+id/city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/company_type"
                android:layout_below="@id/company_title"
                android:textSize="@dimen/sp11"
                android:layout_marginTop="@dimen/dp5h"
                android:text="@string/city"
                android:textColor="@color/text_color_city"
                android:layout_marginEnd="@dimen/dp5h"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_title"
                android:layout_toStartOf="@id/city_tv"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:textSize="@dimen/sp8"
                android:layout_marginTop="@dimen/dp5h"
                android:text="@{ItemCompanyViewModel.city}"
                />
        <LinearLayout
            android:id="@+id/ll_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/city_tv"
            android:layout_toStartOf="@id/line"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/dp4h">
            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/sp8"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/dp4h"/>
            <TextView
                android:id="@+id/tv_no_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/iv_comment"
                android:text="@{ItemCompanyViewModel.comments}"
                android:textColor="@color/text_color_gray"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/dp4h"
                android:textSize="@dimen/sp8" />
            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="@dimen/dp12w"
                android:layout_height="@dimen/dp7w"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/comment"
                android:layout_marginEnd="@dimen/dp4h"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp8"
                android:textColor="@color/text_color_gray"
                android:text="@string/views"
                android:layout_marginEnd="@dimen/dp5h"
                android:textStyle="bold"
                android:id="@+id/tv_watch"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ItemCompanyViewModel.watchs}"
                android:layout_marginEnd="@dimen/dp5h"
                android:textSize="@dimen/sp8"
                android:textStyle="bold"
                android:textColor="@color/back_ground_gray"
                android:id="@+id/tv_no_watch"/>
            <ImageView
                android:layout_width="@dimen/dp12w"
                android:layout_height="@dimen/dp7w"
                android:src="@mipmap/view"
                android:id="@+id/iv_watchs"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/description_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/ll_comments"
            android:layout_marginTop="@dimen/dp5h"
            android:layout_toStartOf="@id/line"
            android:text="@{ItemCompanyViewModel.description}"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/sp8" />
                <RelativeLayout
                    android:layout_width="@dimen/dp25h"
                    android:layout_height="@dimen/dp15w"
                    android:background="@color/pics_color">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{ItemCompanyViewModel.rate}"
                        android:textSize="@dimen/sp11"
                        android:textColor="@color/text_color"
                        android:lineSpacingExtra="-6sp"

                        android:id="@+id/rate_value"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/star"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/rate_value"
                        android:padding="@dimen/dp3w"/>
                </RelativeLayout>
            </RelativeLayout>
</layout>
