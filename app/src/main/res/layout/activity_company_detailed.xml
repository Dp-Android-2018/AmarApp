        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:background="@color/text_color"
            android:padding="3dp">

            <TextView
                android:id="@+id/company_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:lineSpacingExtra="-7.5sp"
                android:padding="5dp"
                android:text="@{CompanyDetailedViewModel.title}"
                android:textColor="@color/text_color_gray"
                android:textSize="13.5sp" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/company_title"
                android:text="@string/type"
                android:textColor="@color/text_color_city"
                android:textSize="9dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/company_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_title"
                android:layout_toStartOf="@id/type"
                android:gravity="center"
                android:padding="2dp"
                android:text="@{CompanyDetailedViewModel.type}"
                android:textSize="6dp" />

            <TextView
                android:id="@+id/city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_title"
                android:layout_marginRight="5dp"
                android:layout_toStartOf="@id/company_type"
                android:text="@string/city"
                android:textColor="@color/text_color_city"
                android:textSize="9dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_title"
                android:layout_toStartOf="@id/city_tv"
                android:gravity="center"
                android:padding="2dp"
                android:text="@{CompanyDetailedViewModel.city}"
                android:textSize="6dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight=".05"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:lineSpacingExtra="5.2sp"
                android:text="@string/company_information"
                android:textColor="@color/text_color_small"
                android:textSize="9.8sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:onClick="@{CompanyDetailedViewModel::companyInformation}"
                android:src="@mipmap/arrow_down_sign_to_navigate" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/projects"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight=".05"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:lineSpacingExtra="5.2sp"
                android:text="@string/compamy_projects"
                android:textColor="@color/text_color_small"
                android:textSize="9.8dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:onClick="@{CompanyDetailedViewModel::companyProjects}"
                android:src="@mipmap/arrow_down_sign_to_navigate" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/timetable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight=".05"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:lineSpacingExtra="5.2sp"
                android:text="@string/time_tabel"
                android:textColor="@color/text_color_small"
                android:textSize="9.8dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/arrow_down_sign_to_navigate"
                android:onClick="@{CompanyDetailedViewModel::companyWorkDays}"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_comments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/city_tv"
            android:layout_weight=".02"
            android:background="@color/text_color"
            android:gravity="end"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment"
                android:textColor="@color/text_color_gray"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/tv_no_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/iv_comment"
                android:padding="2dp"
                android:text="@{CompanyDetailedViewModel.comments}"
                android:textColor="@color/text_color_gray"
                android:textSize="9dp" />

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/comment" />

            <TextView
                android:id="@+id/tv_watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/views"
                android:textColor="@color/text_color_gray"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/tv_no_watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@{CompanyDetailedViewModel.watchs}"
                android:textColor="@color/back_ground_gray"
                android:textSize="9dp" />

            <ImageView
                android:id="@+id/iv_watchs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/view" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:id="@+id/rv_comments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".38"
            tools:listitem="@layout/comment_list_item"
            bind:comments="@{CompanyDetailedViewModel.commentsList}"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_shape"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/your_comment"
            android:textColor="@color/text_color"
            android:onClick="@{CompanyDetailedViewModel::writeComment}"/>
    </LinearLayout>
</layout>