<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="AddProjectViewModel"
            type="dp.com.amarapp.viewmodel.AddProjectViewModel"/>
    </data>
<LinearLayout
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".05"
        android:textSize="10dp"
        android:textColor="@color/home_text_color"
        android:text="@string/add_project_text1"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".05"
        android:textSize="10dp"
        android:textColor="@color/home_text_color"
        android:gravity="center_horizontal"
        android:text="@string/add_project_text2"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/ic_launcher"
            bind:bitmap="@{AddProjectViewModel.picBitmap}"
            android:id="@+id/image"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/add_photo"
            android:layout_alignBottom="@id/image"
            android:layout_alignEnd="@id/image"
            android:onClick="@{AddProjectViewModel::getImage}"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_images"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="@color/text_color_small"
        android:layout_marginTop="26dp"
        tools:listitem="@layout/image_list_item"
        bind:addprojectrecycler="@{AddProjectViewModel.images}"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:background="@drawable/edit_text_shape"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:textColor="@color/text_color"
        android:hint="@string/address"
        android:text="@={AddProjectViewModel.title}"
        android:textColorHint="@color/text_color"
        android:paddingEnd="5dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="@drawable/edit_text_shape"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        android:hint="@string/description"
        android:text="@={AddProjectViewModel.description}"
        android:paddingEnd="5dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape"
        android:textSize="17dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/text_color"
        android:text="@string/save"
        android:onClick="@{AddProjectViewModel::save}"/>
</LinearLayout>
</layout>